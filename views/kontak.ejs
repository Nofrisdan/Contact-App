
<!-- body -->
<div class="container mt-3">
    <h1 class="mb-2 text-center">Daftar Kontak</h1>

    <% if (msg.length !== 0) { %>
        <div class="alert alert-success" role="alert">
            <%= msg %>
          </div>
    <% } %>


    <div class="row">
        <div class="col-md-6 mb-2">
            <div class="row">
                <div class="col-md-3">
                    <a href="/kontak/tambah" class="btn btn-secondary mb-2">Tambah Kontak</a>
                </div>
                <div class="col-md-3">
                    <a href="/kontak/hapussemua" class="btn btn-danger">Hapus Semua</a>
                </div>
            </div>
        </div>
    </div>
  
   
    <div class="table-responsive">
   
        <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nama</th>
                <th scope="col">No HP</th>
                <th scope="col">Aksi</th>
              </tr>
            </thead>
           <tbody>

            <% let no = 1; %>
            <% if (data.length != 0) { %>

                <% data.forEach(v => { %>
                    <tr>
                        <td><%= no++; %></td>
                        <td><%= v.nama %></td>
                        <td><%= v.nohp %></td>
                        <td>
                            <a href="/kontak/detail/<%= v.nama %>" class="btn btn-success badge badge-pill">Detail</a>
                            <a href="/kontak/hapus/<%= v.nama %>" class="btn btn-danger badge badge-pill" onclick="return confirm('Apakah Anda Yakin Menghapus Kontah Ini ?')">Hapus</a>
                        </td>
                    </tr>
                <% }) %> 
            <% }else{ %>
                <tr>
                    <td colspan="4"><div class="alert alert-danger text-center" role="alert">
                        Tidak Ada Data Kontak
                      </div></td>
                </tr>
            
                <% }  %>
           </tbody>
          </table>
       
    </div>
</div>

<!-- script -->
<%- contentFor('script') %>

